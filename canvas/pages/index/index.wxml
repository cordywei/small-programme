<!--index.wxml-->
<view class="container">
  <view class="canvas_area">
    <canvas canvas-id='myCanvas' disable-scroll="false" bindtouchstart="touchStart" bindtouchmove="touchMove"></canvas>
  </view>

  <view class="canvas_tools">
    <view class="box box1" data-param="5" bindtap='penSelect'></view>
    <view class="box box2" data-param="15" bindtap='penSelect'></view>
    <view class="box box3" data-param="pink" bindtap='colorSelect'></view>
    <view class="box box4" data-param="blue" bindtap='colorSelect'></view>
    <view class="box box5" data-param="red" bindtap='colorSelect'></view>
  </view>
</view>
