/* pages/list/list.wxss */
.page{
  position: relative;
}
.lists{
  position: absolute;
  left:0;
  top:0;
  width: 100%;
  height:100%;
}
.list-i{
  width: 100%;
  height:200rpx;
  background-color: pink;
  margin:10rpx 0;
  display: flex;
  flex-direction: column;

}
.content{
  height:100rpx;
  border-bottom:1px solid red;
  line-height: 100rpx;
  padding: 0 20rpx;
}
.time{
  color: greenyellow;
  line-height: 98rpx;
  padding: 0 20rpx;
}
.add{
  width: 100rpx;
  height:100rpx;
  position: absolute;
  right: 50rpx;
  bottom:50rpx;
  border: 1px solid yellow;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: yellowgreen;
}
.add image{
  width: 40rpx;
  height: 40rpx;
}